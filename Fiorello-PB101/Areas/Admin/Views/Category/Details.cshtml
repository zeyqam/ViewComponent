@model CategoryDetailsVM

@{
    ViewData["Title"] = "Category Details";
}

<div class="container mt-5">
    <h2 class="text-center">Category Details</h2>
    <div class="details">
        <dl class="row">
            <dt class="col-sm-2">
                Category Name
            </dt>
            <dd class="col-sm-10">
                @Model.CategoryName
            </dd>
            <dt class="col-sm-2">
                Created Date
            </dt>
            <dd class="col-sm-10">
                @Model.CreatedDate
            </dd>
            <dt class="col-sm-2">
                Product Count
            </dt>
            <dd class="col-sm-10">
                @Model.ProductCount
            </dd>
        </dl>
    </div>
    <div class="products">
        <h3>Products</h3>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="back-to-list">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
